{% block head %}
<style>
  /* General styling for the countdown container */
.countdown {
  display: flex;
  gap: 10px;
  font-weight: bold;
  padding: 10px 20px;
  justify-content: center;
  margin-block-end: 1rem;
}

.enroll-form > .countdown {
  margin-block-start: 1rem;
  margin-block-end: 0;
}

/* Styling for each time unit (days, hours, etc.) */
.countdown span {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 40px;
}

/* Add labels below the numbers for better clarity */
.countdown span::after {
  content: attr(data-label);
  font-size: 12px;
  font-weight: normal;
  margin-top: 4px;
}

/* Adjust for smaller screens */
@media (max-width: 600px) {
  .countdown {
    font-size: 16px;
    gap: 5px;
  }

  .countdown span {
    min-width: 30px;
  }
}

/* Roadmap specific styles */
.roadmap-path {
  display: flex;
  flex-direction: column;
  gap: 0; /* Remove gap, manage spacing with step margins */
  position: relative; /* For the SVG (which is absolute) and steps */
  padding: 2rem 0;
  /* min-height: 1200px; */ /* Removed */
}

/* Diagnostic: Force overflow visible on path and its direct parent section - REMOVED */
/*
